<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/righe2">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00CE4040"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Il testo di riferimento: "
            android:textColor="#E53935"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/referenceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Il tuo testo: "
            android:textColor="#E53935"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speechTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/gradeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvWrongWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvNumWrongWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/returnBTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torna alla pagina principale"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/ivImmVoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />

    </LinearLayout>
</ScrollView>